{% extends "::base.html.twig" %}

{% block stylesheets %}
	<link rel="stylesheet" href="{{ asset('bundles/core/css/style.css') }}">
{% endblock %}

{% block body %}
	<div class="score_tournament">
	{% for group in scores %}
		<table class="table-bordered table">
			<thead>
			<tr>
				<th class="padding">Ecole {{ group.teacher.school }} {{ group.name }},  de {{ group.teacher.firstName }} {{ group.teacher.lastName }}</th>
				<th class="nameScore" >Score</th>
			</tr>
			</thead>
			<tbody>
			{% for team in group.team %}
				<tr class="{{ loop.first ? 'first' }}">
					<td class="padding">{{ team.name }}</td>
					<td class="score">{{ team.bestScore }}</td>
				</tr>
			{% endfor %}
			</tbody>
		</table>
	{% endfor %}
	</div>
{% endblock %}




