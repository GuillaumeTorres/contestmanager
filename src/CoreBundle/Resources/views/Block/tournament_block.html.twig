{% spaceless %}
    {% for flash_message in app.session.flashBag.get('notice') %}
        <div class="flash-notice">
            {{ flash_message }}
        </div>
    {% endfor %}
    <div class="box">
        <div class="box-header">
            <h3 class="box-title">{{ "dashboard.tournament"|trans({}, 'Admin') }}</h3>
        </div>
        <div class="box-body">
            <form method="post" action="{{ path('tournament') }}">
                {{ form_widget(tournament_form) }}
            </form>
        </div>
        <div class="box-header">
            <h3 class="box-title">{{ "dashboard.import"|trans({}, 'Admin') }}</h3>
        </div>
        <div class="box-body">
            {% if import_form is defined %}
                <form action="{{ path('import') }}" method="post" {{ form_enctype(import_form) }}>
                    {{ form_widget(import_form) }}

                    <button type="submit" class="btn btn-primary">{{ "Upload file"|trans({}, 'Admin') }}</button>
                </form>
            {% endif %}
        </div>
    </div>
{% endspaceless %}
