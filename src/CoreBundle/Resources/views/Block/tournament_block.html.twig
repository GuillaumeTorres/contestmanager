{% spaceless %}
    {% for flash_message in app.session.flashBag.get('notice') %}
        <div class="flash-notice">
            {{ flash_message }}
        </div>
    {% endfor %}
    <div class="box">
        <div class="box-header">
            <h3 class="box-title">{{ "dashboard.tournament"|trans({}, 'Admin') }}</h3>
        </div>
        <div class="box-body">
            <form method="post" action="{{ path('tournament') }}">
                {{ form_widget(form) }}
                <input type="submit" name="score" class="btn btn-primary" value="clique">
            </form>
        </div>
    </div>
{% endspaceless %}
