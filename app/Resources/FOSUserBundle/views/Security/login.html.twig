{% extends "FOSUserBundle::layout.html.twig" %}{% trans_default_domain("admin") %}
{% block title %}Login{% endblock %}
{% block body %}
{% if error %}
    <div>{{ error|trans({}, 'FOSUserBundle') }}</div>
{% endif %}
{% block head_stylesheets %}
    <style>
        .jumbotron {
            margin-top: 50px;
        }
    </style>
{% endblock head_stylesheets %}
<div class="container col-md-4 col-md-offset-4">
    <div class="jumbotron">
        <form action="{{ path("fos_user_security_check") }}" method="post" class="form-signin">
            <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
            <h2>{{ "Please sign in"|trans({}, 'Admin') }}</h2>
            <div class="form-group">
                <label for="username">{{ 'security.login.username'|trans({}, 'FOSUserBundle') }}</label>
                <input type="text" id="username" name="_username" value="{{ last_username }}" class="form-control" placeholder="Username" required autofocus />
            </div>

            <div class="form-group">
                <label for="password">{{ 'security.login.password'|trans({}, 'FOSUserBundle') }}</label>
                <input type="password" id="password" name="_password" class="form-control" placeholder="Password" required />
            </div>

        <button class="btn btn-lg btn-primary btn-block" id="_submit" name="_submit" type="submit">{{ 'security.login.submit'|trans({}, 'FOSUserBundle') }}</button>
    </form>
</div>
{% endblock body %}